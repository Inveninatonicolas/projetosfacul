// config/db.js
const oracledb = require('oracledb');

// Configuração da conexão
const dbConfig = {
  user: 'SEU_USUARIO',       
  password: 'SUA_SENHA',     
  connectString: rhdprvrj7hy2xd71_high = (description= (retry_count=20)(retry_delay=3)(address=(protocol=tcps)(port=1522)(host=adb.sa-saopaulo-1.oraclecloud.com))(connect_data=(service_name=g6afd46cd29bec4_rhdprvrj7hy2xd71_high.adb.oraclecloud.com))(security=(ssl_server_dn_match=yes)))
};


async function getConnection() {
  try {
    const connection = await oracledb.getConnection(dbConfig);
    console.log('✅ Conectado ao Oracle Database');
    return connection;
  } catch (err) {
    console.error('❌ Erro ao conectar ao Oracle:', err);
    throw err;
  }
}

module.exports = { getConnection };  // Exporta a função